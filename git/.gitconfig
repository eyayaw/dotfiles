[user]
	name = Eyayaw Beze
	email = eyayaw@tutanota.com

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	dark = true
	line-numbers = true

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[merge]
	conflictstyle = zdiff3

[diff]
	algorithm = histogram

[rerere]
	enabled = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
